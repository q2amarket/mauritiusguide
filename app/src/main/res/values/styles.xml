<resources>

    <!-- Light/Day Mode theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColor">#ACACAC</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/windowBackground</item>
        <item name="cardBackground">#3C4660</item>
        <item name="textColor">#ACACAC</item>
        <item name="headingColor">#FFFFFF</item>
        <item name="tintColor">#ffffff</item>
        <item name="buttonColor">#2196F3</item>
    </style>

    <style name="AppThemeCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#3C4660</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="APPThemeCardViewHeading" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="AppTheme.ButtonAccent" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#FFF</item>
    </style>

</resources>
